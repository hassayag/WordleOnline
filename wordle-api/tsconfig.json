{
    "exclude": ["node_modules", "dist", "scripts"],
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "ES2019",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "lib": ["ES2019"]
}
